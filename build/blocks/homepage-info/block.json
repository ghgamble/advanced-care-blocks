{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "acb/homepage-info",
  "title": "Homepage Info",
  "category": "advancedcare-blocks",
  "description": "Two-column homepage section with image, quote, author, and flexible content below.",
  "supports": {
    "align": [
      "full"
    ],
    "html": false
  },
  "attributes": {
    "mediaUrl": {
      "type": "string",
      "default": ""
    },
    "mediaAlt": {
      "type": "string",
      "default": ""
    },
    "quote": {
      "type": "string",
      "default": ""
    },
    "quoteColor": {
      "type": "string"
    },
    "quoteFontSize": {
      "type": "number"
    },
    "quoteLineHeight": {
      "type": "number"
    },
    "quoteWeight": {
      "type": "string"
    },
    "author": {
      "type": "string",
      "default": ""
    },
    "authorColor": {
      "type": "string"
    },
    "authorFontSize": {
      "type": "number"
    },
    "authorLineHeight": {
      "type": "number"
    },
    "authorWeight": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "descriptionColor": {
      "type": "string"
    },
    "descriptionFontSize": {
      "type": "number"
    },
    "descriptionLineHeight": {
      "type": "number"
    },
    "descriptionWeight": {
      "type": "string"
    },
    "backgroundGradient": {
      "type": "string",
      "default": "linear-gradient(to right, #036938, #8DC43F)"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}