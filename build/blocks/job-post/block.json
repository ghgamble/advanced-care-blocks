{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acb/job-post",
  "title": "Job Post",
  "category": "advancedcare-blocks",
  "description": "Displays a job title, posting date, and apply button in a single row.",
  "supports": {
    "html": false,
    "reusable": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "date": {
      "type": "string",
      "default": ""
    },
    "buttonUrl": {
      "type": "string",
      "default": ""
    },
    "openInNewTab": {
      "type": "boolean",
      "default": true
    },
    "buttonColor": {
      "type": "string",
      "default": "#52b79a"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}