{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "acb/homepage-info",
    "title": "Homepage Info",
    "category": "advancedcare-blocks",
    "description": "Full-width info section with a split layout: image, quote, and dynamic stats.",
    "supports": {
      "align": false,
      "html": false
    },
    "attributes": {
      "mediaUrl": {
        "type": "string"
      },
      "mediaAlt": {
        "type": "string"
      },
      "quote": {
        "type": "string"
      },
      "quoteColor": { 
        "type": "string",
        "default": "#ffffff" 
      },
      "quoteFontSize": { 
        "type": "number",
        "default": "32px" 
      },
      "quoteLineHeight": { 
        "type": "number" 
      },
      "quoteWeight": { 
        "type": "string",
        "default": "700" 
      },
      "author": {
        "type": "string"
      },
      "authorColor": { 
        "type": "string",
        "default": "#ffffff" 
      },
      "authorFontSize": { 
        "type": "number",
        "default": "16px" 
      },
      "authorLineHeight": { 
        "type": "number" 
      },
      "authorWeight": { 
        "type": "string",
        "default": "600" 
      },
      "description": {
        "type": "string"
      },
      "descriptionColor": { 
        "type": "string",
        "default": "#ffffff" 
      },
      "descriptionFontSize": { 
        "type": "number",
        "default": "16px" 
      },
      "descriptionLineHeight": { 
        "type": "number" 
      },
      "descriptionWeight": { 
        "type": "string" 
      },
      "stats": {
        "type": "array"
      },
      "statNumberColor": { 
        "type": "string",
        "default": "#03678E" 
      },
      "statNumberFontSize": { 
        "type": "number",
        "default": "32px" 
      },
      "statNumberLineHeight": { 
        "type": "number" 
      },
      "statNumberWeight": { 
        "type": "string",
        "default": "700"
      },
      "statTextColor": { 
        "type": "string",
        "default": "#333333" 
      },
      "statTextFontSize": { 
        "type": "number",
        "default": "16px" 
      },
      "statTextLineHeight": { 
        "type": "number" 
      },
      "statTextWeight": { 
        "type": "string"
      }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
  